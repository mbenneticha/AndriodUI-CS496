<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/act3_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity3"
            android:textSize="10pt"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="3">

        <Button
            android:id="@+id/act3_1"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_2"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_3"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30pt"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="3">

        <Button
            android:id="@+id/act3_4"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_5"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_6"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30pt"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="3">

        <Button
            android:id="@+id/act3_7"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_8"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30pt"
            />
        <Button
            android:id="@+id/act3_9"
            android:layout_height="130dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30pt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/act3_output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="16pt"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:typeface="monospace"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="1">

        <Button
            android:id="@+id/act3_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cleard"
            android:backgroundTint="@color/colorAccent"
            android:text="Clear"
            android:textSize="9pt"
            android:textColor="@color/colorButtonText"
            android:textAlignment="center"
            android:typeface="monospace"
            />

    </LinearLayout>

</GridLayout>